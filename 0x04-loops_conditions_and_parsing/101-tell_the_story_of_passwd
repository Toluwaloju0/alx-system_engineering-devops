#!/usr/bin/env bash
# A file to open the /etc/passwd file for reading and writing about it
while IFS=: read -r f1 f2 f3 f4 f5 f6 f7
do
    echo "The user $f1 is part of the $f4 gang, lives in $f6 and rides $f7. $f5's place is protected by the passcode $f2, more info about the user here: $f3"
done < /etc/passwd

